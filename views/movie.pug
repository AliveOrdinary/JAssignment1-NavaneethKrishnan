extends common/layout 


block layout-content
    div(class="py-4 flex flex-col items-center justify-center")
      div(class="flex flex-col md:flex-row justify-between  items-center p-4 md:p-8 gap-4 md:gap-24")
        img(class="rounded-lg w-full mx-auto mb-4   md:mb-0 ")(src=movie.Poster, alt=movie.title)
        div(class="flex flex-col justify-around md:w-full gap-4 md:gap-20 h-full md:h-auto") 
            h3(class="text-xl md:text-6xl lg:text-8xl font-semibold text-gray-800mb-4") #{movie.Title}
            a(class="bg-blue-500 text-white py-4 px-12 rounded-md inline-block m-2transition-colors duration-300 text-center self-start")(href=`/movie/${movie.id}`) Buy Now
      div(class=" p-4 md:p-8 ")
        p.text-gray-800.mb-4 Year: #{movie.Year}
        p.text-gray-800.mb-6 Synopsis: #{movie.Plot}
      div(class="p-4 md:p-8 flex flex-col justify-start items-start w-full")
        h4.text-xl.font-semibold.text-white.mb-2 Movie Details
        div(class="grid grid-cols-1 md:grid-cols-2 gap-4")
        div
          p.text-gray-600.mb-1 Director:
          p.text-gray-500 #{movie.Director}
        div
           p.text-gray-600.mb-1 Actors:
           p.text-gray-500 #{movie.Actors}
        div
           p.text-gray-600.mb-1 Genre:
           p.text-gray-500 #{movie.Genre}
        div
           p.text-gray-600.mb-1 Runtime:
           p.text-gray-500 #{movie.Runtime}      

