extends common/layout 

block layout-content
  h1(class="text-xl md:text-3xl text-center py-2 md:py-4") Add a Movie
  form(action="/add-movie" method="POST" class="rounded-lg overflow-hidden shadow-lg flex flex-col justify-between mx-auto p-4 gap-4 w-2/3 lg:w-1/2")
    div(class="flex flex-col justify-around md:w-full gap-4  h-full md:h-auto py-2 md:py-6 px-4 md-px-8") 
      label(for="title") Title
      input(type="text" name="title" id="title" required)
      label(for="year") Year
      input(type="text" name="year" id="year" required)
      label(for="year") Rating
      input(type="text" name="rating" id="rating" required)
      label(for="poster") Poster
      input(type="file" name="poster" id="poster" )
      label(for="plot") Plot
      textarea(name="plot" id="plot" required)
      label(for="director") Director
      input(type="text" name="director" id="director" required)
      label(for="actors") Actors
      input(type="text" name="actors" id="actors" required)
      label(for="genre") Genre
      input(type="text" name="genre" id="genre" required)
      label(for="runtime") Runtime
      input(type="text" name="runtime" id="runtime" required)
      button(type="submit" class="bg-blue-500 text-white py-4 px-12 rounded-md inline-block m-2transition-colors duration-300 text-center self-start") Add Movie