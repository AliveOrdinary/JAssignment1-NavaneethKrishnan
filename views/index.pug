extends common/layout 

block layout-content 
  div(class="py-4 flex flex-col items-center justify-center")
    h1(class="text-4xl font-semibold text-gray-800 mb-4") Welcome to Movie Shop
    p(class="text-gray-600 mb-6") Browse our collection of movies and buy your favorite ones.
  div(class="container mx-auto px-12 md:px-16 lg:px-24 py-6 lg:py-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 md:gap-8 gap-6 xl:gap-12")
    each movie in movies 
      div(class=" bg-white rounded-lg overflow-hidden shadow-lg flex flex-col justify-between ")
        img(class="rounded-lg w-fit")(src=movie.Poster, alt=movie.title)
        h3.text-md.font-semibold.p-2 #{movie.Title}	
        p.text-gray-600.p-2 #{movie.Year}
        a(class="bg-blue-500 text-white py-3 px-4 rounded-md inline-block m-2transition-colors duration-300 text-center")(href=`/movie/${movie.id}`) Buy Now